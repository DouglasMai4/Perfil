<style lang="scss">
@import '../assets/colors.scss';

.hero {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100dvh;
  text-align: center;
  background-image: linear-gradient(45deg, $c-primary, $c-secondary);
  color: $c-text;
  text-shadow: 0 0 10px rgb(0 0 0 / 50%);
}

.icon {
  position: absolute;
  width: 2rem;
  left: 50%;
  bottom: 1rem;
  color: $c-text;
  transform: translateX(-50%);
  animation: icon-jump 1s infinite;
}

@keyframes icon-jump {
  0% {
    bottom: 1rem;
  }
  50% {
    bottom: 1.5rem;
  }
  100% {
    bottom: 1rem;
  }
}
</style>
