--- 
import SearchBar from '../components/SearchBar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Site pessoal de Douglas Maia">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    <SearchBar />
    <slot />
	</body>
</html>

<style is:global lang="scss">
@import '../assets/colors.scss';
@import 'https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,700;1,400&display=swap';

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

:root {
  font-family: Poppins, sans-serif;
}

::selection {
  background-color: $c-secondary;
  color: $bg-color;
}

html {
  scroll-behavior: smooth;
}

body {
  background-color: $bg-color;
  color: $c-text;
  text-align: center;
  
  hr {
    width: calc(100% - 1rem);
    height: 2px;
    border: none;
    margin-inline: auto;
    background-image: linear-gradient(to right, $c-primary, $c-secondary);
  }
}

@media screen and (min-width: 950px) {
  .flex {
    display: grid;
    grid-template-columns: 20rem 1fr;
  }
}
</style>
